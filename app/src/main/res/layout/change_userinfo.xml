<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame_radius_alpha"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="150dp"
        android:elevation="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#4684ff"
            android:text="修改用户信息"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="用户名"
                    />
                <EditText
                    android:id="@+id/usernameRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_span="2"
                    android:background="@drawable/login_radius"
                    android:hint="请输入用户名"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="密码"
                    />
                <EditText
                    android:id="@+id/passwordRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_span="2"
                    android:background="@drawable/login_radius"
                    android:hint="请输入密码"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </TableRow>
            //

            <TableRow android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textttt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="性别"
                    />

                   <TextView
                       android:id="@+id/sex"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_marginLeft="15dp"
                       android:textSize="25dp"
                       android:text="男"
                       />

            </TableRow>
            //

            <TableRow android:layout_marginTop="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="年龄"
                    />
                <EditText
                    android:id="@+id/ageRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_span="3"
                    android:background="@drawable/login_radius"
                    android:hint="请输入年龄"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="电话"
                    />
                <EditText
                    android:id="@+id/phoneRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_span="3"
                    android:background="@drawable/login_radius"
                    android:hint="请输入手机号"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </TableRow>
            //

            <TableRow android:layout_marginTop="25dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:text="兴趣"
                    />
                <EditText
                    android:id="@+id/xingquRegister"
                    android:layout_width="fill_parent"
                    android:layout_span="2"
                    android:background="@drawable/login_radius"
                    android:hint="请选择歌曲兴趣"
                    android:paddingStart="15dp"
                    android:textSize="15sp"
                    android:layout_height="55dp"
                    />


            </TableRow>


            <TableRow android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/change_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="@drawable/login_button"
                    android:text="修改" />

            </TableRow>


        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>